---
import { articles } from '../../data/articles';
import ArticleCard from '../articles/ArticleCard.astro';

const featuredArticles = articles.slice(0, 3); // Show only the first 3 articles
---

<section class="bg-gray-100 py-12">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-3xl font-bold">Useful Information</h2>
      <a href="/useful-info" class="text-blue-600 hover:text-blue-800">View All Articles â†’</a>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {featuredArticles.map(article => (
        <ArticleCard article={article} />
      ))}
    </div>
  </div>
</section>